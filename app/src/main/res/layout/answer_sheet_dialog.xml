<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/answer_sheet_dialog_shape"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_270"
            android:background="@drawable/answer_sheet_dialog_shape"
            >
            
            <RelativeLayout
                android:id="@+id/answer_sheet_dialog_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_79">

                <ImageView
                    android:id="@+id/answer_sheet_dialog_finansh"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:src="@drawable/back"
                    android:layout_marginLeft="@dimen/dp_22"
                    android:layout_centerVertical="true"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_17"
                    android:text="答题卡"
                    android:textColor="@color/color_000000"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>

            <View
                android:id="@+id/answer_sheet_dialog_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_E0E0E0"
                android:layout_below="@+id/answer_sheet_dialog_title"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/answer_sheet_dialog_line"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_40"
                >
                
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/dp_21"
                    android:layout_marginRight="@dimen/dp_21"
                    >
                    
                    <TextView
                        android:id="@+id/answer_sheet_dialog_first"
                        android:layout_width="@dimen/dp_41"
                        android:layout_height="@dimen/dp_41"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/sp_17"
                        android:background="@drawable/answer_sheet_text_shape"
                        />

                    <View
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_1"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:id="@+id/answer_sheet_dialog_second"
                        android:layout_width="@dimen/dp_41"
                        android:layout_height="@dimen/dp_41"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/sp_17"
                        android:background="@drawable/answer_sheet_text_shape"
                        />
                    <View
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_1"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:id="@+id/answer_sheet_dialog_thread"
                        android:layout_width="@dimen/dp_41"
                        android:layout_height="@dimen/dp_41"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/sp_17"
                        android:background="@drawable/answer_sheet_text_shape"
                        />
                    <View
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_1"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:id="@+id/answer_sheet_dialog_four"
                        android:layout_width="@dimen/dp_41"
                        android:layout_height="@dimen/dp_41"
                        android:gravity="center"
                        android:text="4"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/sp_17"
                        android:background="@drawable/answer_sheet_text_shape"
                        />
                    <View
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_1"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:id="@+id/answer_sheet_dialog_five"
                        android:layout_width="@dimen/dp_41"
                        android:layout_height="@dimen/dp_41"
                        android:gravity="center"
                        android:text="5"
                        android:textColor="@color/color_C2C2C2"
                        android:textSize="@dimen/sp_17"
                        android:background="@drawable/answer_sheet_text_shape_second"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/dp_21"
                    android:layout_marginRight="@dimen/dp_21"
                    android:layout_marginTop="@dimen/dp_30"
                    >

                    <TextView
                        android:id="@+id/answer_sheet_dialog_sex"
                        android:layout_width="@dimen/dp_41"
                        android:layout_height="@dimen/dp_41"
                        android:gravity="center"
                        android:text="6"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/sp_17"
                        android:background="@drawable/answer_sheet_text_shape"
                        />

                    <View
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_1"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:id="@+id/answer_sheet_dialog_seven"
                        android:layout_width="@dimen/dp_41"
                        android:layout_height="@dimen/dp_41"
                        android:gravity="center"
                        android:text="7"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/sp_17"
                        android:background="@drawable/answer_sheet_text_shape"
                        />
                    <View
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_1"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:id="@+id/answer_sheet_dialog_eight"
                        android:layout_width="@dimen/dp_41"
                        android:layout_height="@dimen/dp_41"
                        android:gravity="center"
                        android:text="8"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/sp_17"
                        android:background="@drawable/answer_sheet_text_shape"
                        />
                    <View
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_1"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:id="@+id/answer_sheet_dialog_nine"
                        android:layout_width="@dimen/dp_41"
                        android:layout_height="@dimen/dp_41"
                        android:gravity="center"
                        android:text="9"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/sp_17"
                        android:background="@drawable/answer_sheet_text_shape"
                        />
                    <View
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_1"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:id="@+id/answer_sheet_dialog_then"
                        android:layout_width="@dimen/dp_41"
                        android:layout_height="@dimen/dp_41"
                        android:gravity="center"
                        android:text="10"
                        android:textColor="@color/color_C2C2C2"
                        android:textSize="@dimen/sp_17"
                        android:background="@drawable/answer_sheet_text_shape_second"
                        />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>