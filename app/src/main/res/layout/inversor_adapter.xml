<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    >


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    
        >
        <LinearLayout
            android:id="@+id/inversor_adt_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="UselessParent"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_marginBottom="@dimen/dp_7"
            >


            <ImageView
                android:id="@+id/inversor_adt_userimage"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_9"
                android:src="@drawable/user_image"
                />

            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/dp_10"
                tools:ignore="InefficientWeight,RtlHardcoded"

                >




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/dp_8"
                    >

                    <TextView
                        android:id="@+id/inversor_adt_name"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/dp_15"
                        android:textColor="@color/color_343434"
                        android:text="期货小哥"
                        />
                    <RelativeLayout
                        android:id="@+id/inversor_adt_collect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dp_15"
                        >

                        <ImageView
                            android:layout_width="@dimen/dp_19"
                            android:layout_height="@dimen/dp_19"
                            android:src="@drawable/collect_image"
                            />
                    </RelativeLayout>


                </LinearLayout>



                <TextView
                    android:id="@+id/inversor_adt_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/color_3B424C"
                    android:text="司法所科技粉丝点击发送了副科级死了客服经理接待来访苦涩分类数据东方绿色减肥is即可粉色发"
                    android:maxLines="2"
                    android:ellipsize="end"
                    tools:ignore="HardcodedText"
                    android:layout_marginRight="@dimen/dp_20"
                    />
                
                <ImageView
                    android:id="@+id/inversor_adt_image"
                    android:layout_width="@dimen/dp_66"
                    android:layout_height="@dimen/dp_66"
                    android:layout_marginTop="@dimen/dp_11"
                    android:layout_marginBottom="8dp"
                    />
                
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/dp_5"
                    >
                    <TextView
                        android:id="@+id/inversor_adt_data"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/color_7D8596"
                        android:text="2019-05-16 12:24"
                        />

                    <RelativeLayout
                        android:id="@+id/inversor_adt_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/dp_6"
                        android:paddingBottom="@dimen/dp_6"
                        android:paddingLeft="@dimen/dp_15"
                        android:layout_gravity="right"
                        >

                        <ImageView
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"
                            android:src="@drawable/image_comment"
                            />
                    </RelativeLayout>

                </LinearLayout>
             

            </LinearLayout>


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@color/color_F4F4F4"
            android:layout_below="@+id/inversor_adt_layout"
            />
        

    </RelativeLayout>


</LinearLayout>