<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/drawer_layout"
    >




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <ImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_65"
                android:background="@color/colorWhite"
                >

                <ImageView
                    android:id="@+id/book_detail_act_back"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_27"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:src="@drawable/back_787878"
                    android:layout_marginBottom="@dimen/dp_15"
                    />


                <ImageView
                    android:id="@+id/book_detail_act_more"
                    android:layout_width="@dimen/dp_27"
                    android:layout_height="@dimen/dp_27"
                    android:src="@drawable/more_787878"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/book_detail_act_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>



                <LinearLayout
                    android:id="@+id/book_detail_act_catelogy_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_58"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:visibility="invisible"
                    >

                    <LinearLayout
                        android:id="@+id/book_detail_act_catelogy"
                        android:layout_width="@dimen/dp_0"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@color/colorWhite"
                        >

                        <ImageView
                            android:layout_width="@dimen/dp_29"
                            android:layout_height="@dimen/dp_29"
                            android:src="@drawable/catalog_image"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_2"
                            android:textSize="14sp"
                            android:textColor="@color/color_7D8596"
                            android:text="目录"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/book_detail_act_setting"
                        android:layout_width="@dimen/dp_0"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@color/colorWhite"
                        android:visibility="gone"
                        >

                        <ImageView
                            android:layout_width="@dimen/dp_29"
                            android:layout_height="@dimen/dp_29"
                            android:src="@drawable/setting_image"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_2"
                            android:textSize="14sp"
                            android:textColor="@color/color_7D8596"
                            android:text="设置"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/book_detail_act_comment"
                        android:layout_width="@dimen/dp_0"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@color/colorWhite"
                        >

                        <ImageView
                            android:layout_width="@dimen/dp_29"
                            android:layout_height="@dimen/dp_29"
                            android:src="@drawable/comment_image"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_2"
                            android:textSize="14sp"
                            android:textColor="@color/color_7D8596"
                            android:text="评论"
                            />
                    </LinearLayout>
                </LinearLayout>

                <CheckBox
                    android:id="@+id/book_detail_act_checkbox"
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_48"
                    android:background="@drawable/book_detail_act_checkbox"
                    android:layout_alignTop="@+id/book_detail_act_catelogy_layout"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="-60dp"
                    android:layout_marginRight="@dimen/dp_33"
                    android:button="@null"
                    android:visibility="gone"
                    />

            </RelativeLayout>


        </LinearLayout>


        <View
            android:id="@+id/book_detail_act_model"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_cc000000"
            />
    </RelativeLayout>

    
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:layout_marginRight="@dimen/dp_60"
        android:background="@color/colorWhite"
        >

        <TextView
            android:id="@+id/drawer_tital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_22"
            android:textColor="@color/color_000000"

            android:text="现代货币战争始末"
            android:layout_marginTop="@dimen/dp_60"
            android:layout_marginLeft="@dimen/dp_27"
            />

        <TextView
            android:id="@+id/drawer_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_17"
            android:textColor="@color/color_838A9A"
            android:layout_below="@id/drawer_tital"
            android:layout_marginLeft="@dimen/dp_27"
            android:layout_marginTop="@dimen/dp_5"
            android:text="共 30 章"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/drawer_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/drawer_count"
            android:layout_marginBottom="@dimen/dp_37"
            />
    </RelativeLayout>




</android.support.v4.widget.DrawerLayout>