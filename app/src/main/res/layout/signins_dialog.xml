<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_30"
        android:background="@drawable/signins_dialog_background"
        >

        <ImageView
            android:id="@+id/background_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <LinearLayout
            android:id="@+id/sifnins_dia_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_25"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已签到"
                    android:textColor="@color/color_4A4A4A"
                    android:textSize="@dimen/sp_13" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/signins_dia_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="31"
                        android:textSize="@dimen/dp_31" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="天"
                        android:textColor="@color/color_4A4A4A"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未签到"
                    android:textColor="@color/color_4A4A4A"
                    android:textSize="@dimen/sp_13" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textSize="@dimen/dp_31" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="天"
                        android:textColor="@color/color_4A4A4A"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/signins_dialog_month"
            android:layout_width="@dimen/dp_154"
            android:layout_height="@dimen/dp_40"
            android:layout_below="@+id/sifnins_dia_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_26"
            android:background="@drawable/signins_dialog_shape"
            android:gravity="center"
            android:text="2019年5月"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_15" />


        <com.haibin.calendarview.CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/signins_dialog_month"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@android:color/transparent"
            app:calendar_height="50dp"
            app:current_month_lunar_text_color="#CFCFCF"
            app:current_month_text_color="@color/text_hint"
            app:min_year="2019"
            app:min_year_month="4"
            app:month_view="tech.com.commoncore.widget.calendar.SimpleMonthView"
            app:month_view_scrollable="false"
            app:month_view_show_mode="mode_only_current"
            app:other_month_text_color="#e1e1e1"
            app:scheme_lunar_text_color="@color/text_hint"
            app:scheme_text="@color/text_hint"
            app:selected_text_color="#fff"
            app:selected_theme_color="@color/color_d0d0d0"
            app:week_background="@android:color/transparent"
            app:week_bar_view=""
            app:week_start_with="mon"
            app:week_text_color="@color/text_hint"
            app:week_view="tech.com.commoncore.widget.calendar.SimpleWeekView"
            app:year_view_month_text_color="@color/text_hint"
            app:year_view_scrollable="false" />

        <TextView
            android:id="@+id/signins_dialog_go_bookmall"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_54"
            android:layout_below="@+id/calendarView"
            android:layout_marginLeft="@dimen/dp_27"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_24"
            android:background="@drawable/sifnins_dialog_shape"
            android:gravity="center"
            android:text="前往书城"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_15" />
    </RelativeLayout>

</LinearLayout>