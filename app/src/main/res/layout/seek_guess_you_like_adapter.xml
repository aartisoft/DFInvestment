<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_17"
        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


            <ImageView
                android:id="@+id/seek_guss_you_like_image"
                android:layout_width="@dimen/dp_104"
                android:layout_height="@dimen/dp_84"
                android:src="@drawable/user_image_check"
                android:scaleType="fitXY"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp_15"
                >

                <TextView
                    android:id="@+id/seek_guss_you_like_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/color_3B424C"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="炒单女神谢雨：炒单纪律最主…"
                    />
                <TextView
                    android:id="@+id/seek_guss_you_like_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/color_7D8596"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="一个被圈内友人誉为“炒单女神”的80后美女炒手，2013年实现连续四十…"
                    android:layout_marginTop="@dimen/dp_3"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_4"
                    >


                    <TextView
                        android:id="@+id/seek_guss_you_like_read"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@color/color_7D8596"
                        android:text="1354阅读"

                        />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:id="@+id/seek_guss_you_like_collect_checkbox"
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:button="@null"
                            android:src="@drawable/collect_ischeck"
                            />

                        <TextView
                            android:id="@+id/seek_guss_you_like_collect_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_13"
                            android:textColor="@color/color_7D8596"
                            android:text="收藏"
                            />
                    </LinearLayout>
                </LinearLayout>




            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>