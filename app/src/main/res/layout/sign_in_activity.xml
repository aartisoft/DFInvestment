<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    android:orientation="vertical">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:background="@drawable/tital_bar_image"
        android:paddingTop="@dimen/dp_10">


        <LinearLayout
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/sp_10"
            android:padding="@dimen/sp_10"
            tools:ignore="RtlHardcoded">

            <ImageView
                android:id="@+id/homepage_frag_sign_in"
                android:layout_width="@dimen/dp_28"
                android:layout_height="@dimen/dp_28"
                android:src="@drawable/back_white"
                tools:ignore="ContentDescription" />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_22"
            android:text="打卡记录"
            android:textColor="@color/colorWhite"
            android:textSize="17sp"
            tools:ignore="HardcodedText" />
    </RelativeLayout>

    <com.haibin.calendarview.CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:month_view="tech.com.commoncore.widget.calendar.SimpleMonthView"
        app:week_view="tech.com.commoncore.widget.calendar.SimpleWeekView"
        app:week_bar_view=""
        app:calendar_height="50dp"
        app:current_month_lunar_text_color="#CFCFCF"
        app:min_year="2019"
        app:min_year_month="4"
        app:other_month_text_color="#e1e1e1"
        app:selected_text_color="#fff"
        app:selected_theme_color="@color/color_d0d0d0"
        app:week_start_with="mon"
        app:week_text_color="@color/text_hint"
        app:week_background="@android:color/transparent"
        app:month_view_show_mode="mode_only_current"
        app:month_view_scrollable="false"
        app:year_view_scrollable="false"
        app:scheme_lunar_text_color="@color/text_hint"
        app:scheme_text="@color/text_hint"
        app:year_view_month_text_color="@color/text_hint"
        app:current_month_text_color="@color/text_hint"
        />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/color_3B424C"
            android:text="今日学习"
            />

        <TextView
            android:id="@+id/sign_in_act_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@color/color_3B424C"
            android:textStyle="bold"
            android:text="0"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/color_7D8596"
            android:textStyle="bold"
            android:text="分钟"
            android:layout_marginLeft="@dimen/dp_7"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_E0E0E0"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="337dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="学习总时长"
            android:textColor="@color/color_3B424C"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/sign_in_act_max_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@color/color_3B424C"
            android:textStyle="bold"
            android:text="0.0"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/color_7D8596"
            android:textStyle="bold"
            android:text="小时"
            android:layout_marginLeft="@dimen/dp_7"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_E0E0E0"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/color_3B424C"
            android:text="打卡天数"
            />

        <TextView
            android:id="@+id/sign_in_act_day_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@color/color_3B424C"
            android:textStyle="bold"
            android:text="0"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/color_7D8596"
            android:textStyle="bold"
            android:text="天"
            android:layout_marginLeft="@dimen/dp_7"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_E0E0E0"
        />


    <TextView
        android:id="@+id/sign_in_button"
        android:layout_width="@dimen/dp_232"
        android:layout_height="@dimen/dp_44"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_45"
        android:layout_gravity="center"
        android:textColor="@color/colorWhite"
        android:text="立即打卡"
        android:background="@drawable/sign_in_act_shape"
        android:textSize="@dimen/dp_17"
        />
</LinearLayout>