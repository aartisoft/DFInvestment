<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_E7c9a4"
    android:orientation="vertical"
    >



    <TextView
        android:id="@+id/course_detail_act_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:text="现代货币战争的始末"
        android:textColor="@color/color_8B7B63"
        android:layout_marginLeft="@dimen/dp_17"
        android:layout_marginTop="@dimen/dp_40"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_17"
        >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >


                <TextView
                    android:id="@+id/course_detail_act_context"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/color_5A4E3D"
                    />
            </LinearLayout>


    </ScrollView>

</LinearLayout>