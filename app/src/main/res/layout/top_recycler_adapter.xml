<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    >

    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/color_E0E0E0"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            >


            <ImageView
                android:id="@+id/top_recycler_image"
                android:layout_width="@dimen/dp_68"
                android:layout_height="@dimen/dp_88"
                />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/top_recycler_image"
                android:layout_alignTop="@+id/top_recycler_image"
                android:layout_marginLeft="-6dp"

                >
                <ImageView
                    android:id="@+id/top_recycler_top_image"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_29"
                    android:src="@drawable/top_first"

                    />

                <TextView
                    android:id="@+id/top_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/colorWhite"
                    android:text="1"
                    android:layout_marginLeft="@dimen/dp_9"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>



            <TextView
                android:id="@+id/top_recycler_tital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_17"
                android:textColor="@color/color_000000"
                android:layout_toRightOf="@+id/top_recycler_image"
                android:layout_alignTop="@+id/top_recycler_image"
                android:layout_marginLeft="@dimen/dp_21"
                android:text="漫步华尔街"
                android:layout_marginTop="@dimen/dp_8"
                />

            <TextView
                android:id="@+id/top_recycler_top_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/top_recycler_tital"
                android:layout_alignLeft="@+id/top_recycler_tital"
                android:layout_marginTop="@dimen/dp_20"
                android:text="综合人气榜 第1名"
                android:textColor="@color/color_7D8596"
                android:textSize="@dimen/sp_13"
                />

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>