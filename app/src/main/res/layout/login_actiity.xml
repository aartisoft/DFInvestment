<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/login_act_background_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/sp_10"
                android:padding="@dimen/sp_10">

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_30"
                    android:src="@drawable/back_white" />
            </LinearLayout>


        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_180"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_339"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="@drawable/login_act_background_shape"
                    android:gravity="center"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_48"
                        android:layout_marginLeft="@dimen/dp_24"
                        android:layout_marginRight="@dimen/dp_24"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_21"
                            android:src="@drawable/image_phone"
                            tools:ignore="ContentDescription" />

                        <EditText
                            android:id="@+id/login_act_username_edittext"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginRight="@dimen/sp_10"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="请输入手机号"
                            android:textColor="@color/color_505050"
                            android:textColorHint="@color/color_505050"
                            android:textSize="15sp"
                            tools:ignore="Autofill,HardcodedText,RtlHardcoded,TextFields" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginLeft="@dimen/dp_24"
                        android:layout_marginRight="@dimen/dp_24"
                        android:background="@color/color_E0E0E0" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_48"
                        android:layout_marginLeft="@dimen/dp_24"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_24"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_21"
                            android:src="@drawable/image_psd"
                            tools:ignore="ContentDescription" />

                        <EditText
                            android:id="@+id/login_act_password_edittext"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginRight="@dimen/sp_15"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="请输入密码"
                            android:inputType="textPassword"
                            android:textColor="@color/color_505050"
                            android:textColorHint="@color/color_505050"
                            android:textSize="15sp"
                            tools:ignore="Autofill,HardcodedText,RtlHardcoded" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_3">
                            <!--<CheckBox-->
                            <!--android:id="@+id/login_act_watch"-->
                            <!--android:layout_width="@dimen/dp_17"-->
                            <!--android:layout_height="@dimen/dp_13"-->
                            <!--android:button="@null"-->
                            <!--android:background="@drawable/login_act_checkbox"-->
                            <!--/>-->

                            <CheckBox
                                android:id="@+id/login_act_watch_checkbox"
                                android:layout_width="@dimen/dp_17"
                                android:layout_height="@dimen/dp_13"
                                android:background="@drawable/login_act_checkbox"
                                android:button="@null" />
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginLeft="@dimen/dp_24"
                        android:layout_marginRight="@dimen/dp_24"
                        android:background="@color/color_E0E0E0" />


                    <TextView
                        android:id="@+id/login_act_button"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_54"
                        android:layout_marginLeft="@dimen/dp_24"
                        android:layout_marginTop="@dimen/dp_41"
                        android:layout_marginRight="@dimen/dp_24"
                        android:background="@drawable/login_act_button_shape"
                        android:gravity="center"
                        android:text="登录"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/dp_17" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/dp_34"
                        >

                        <TextView
                            android:id="@+id/login_act_forget_psd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="忘记密码"
                            android:textColor="@color/color_17B2AA"
                            android:textSize="15sp" />


                        <View
                            android:layout_width="@dimen/dp_1"
                            android:layout_height="@dimen/dp_13"
                            android:background="@color/color_17B2AA"
                            android:layout_marginLeft="@dimen/dp_8"
                            android:layout_marginRight="@dimen/dp_8"
                            />
                        <TextView
                            android:id="@+id/login_act_register_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="注册账号"
                            android:textColor="@color/color_17B2AA"
                            android:textSize="15sp" />
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
        </ScrollView>


    </RelativeLayout>


</LinearLayout>