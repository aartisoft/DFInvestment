<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        >


        <TextView
            android:id="@+id/adapter_enter_holder_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_DD4545"
            android:textSize="13sp"
            android:text="数据获取失败"
            android:layout_centerInParent="true"
            />


        <TextView
            android:id="@+id/adapter_enter_holder_retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点我重试"
            android:background="@drawable/adapter_enter_holder_shape"
            android:layout_below="@+id/adapter_enter_holder_text"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/color_DD4545"
            android:textSize="13sp"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_6"
            android:paddingBottom="@dimen/dp_6"
            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>