<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:background="@drawable/tital_bar_image"
        android:paddingTop="@dimen/dp_10"
        >


        <LinearLayout
            android:id="@+id/sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/sp_10"
            android:layout_marginTop="@dimen/sp_10"
            android:layout_marginLeft="@dimen/dp_5"
            tools:ignore="RtlHardcoded">

            <ImageView
                android:id="@+id/homepage_frag_sign_in"
                android:layout_width="@dimen/dp_28"
                android:layout_height="@dimen/dp_28"
                android:src="@drawable/sign_in_image"
                tools:ignore="ContentDescription" />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/colorWhite"
            android:text=""
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_22"
            tools:ignore="HardcodedText" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/sp_10"
            android:layout_marginTop="@dimen/sp_10"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_alignParentRight="true"
            tools:ignore="RtlHardcoded"
            android:visibility="invisible"
            >

            <ImageView
                android:layout_width="@dimen/dp_28"
                android:layout_height="@dimen/dp_28"
                android:src="@drawable/server_image"
                tools:ignore="ContentDescription" />
        </LinearLayout>
    </RelativeLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_17"
        android:textColor="@color/color_3B424C"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginLeft="@dimen/sp_15"
        android:text="话题热搜"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_86"
        android:layout_marginTop="@dimen/dp_11"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:orientation="vertical"
        android:padding="@dimen/dp_16"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >


            <TextView
                android:id="@+id/seek_frag_first_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/color_3B424C"
                android:text="揭秘期货的奥秘"
                />
            
            <ImageView
                android:id="@+id/seek_frag_first_image"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:src="@drawable/re_icon"
                android:layout_marginLeft="@dimen/dp_4"
                />


            <View
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_1"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/seek_frag_second_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/color_3B424C"
                android:text="期货大赢家关注的…"

                />

            <ImageView
                android:id="@+id/seek_frag_second_image"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:src="@drawable/xin_icon"
                android:layout_marginLeft="@dimen/dp_4"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_10"
            >


            <TextView
                android:id="@+id/seek_frag_thread_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/color_3B424C"
                android:text="期货购入原则"
                />

            <ImageView
                android:id="@+id/seek_frag_thread_image"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:src="@drawable/tui_icon"
                android:layout_marginLeft="@dimen/dp_4"
                />


            <View
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_1"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/seek_frag_four_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/color_3B424C"
                android:text="股指期货与原油期… "

                />

            <ImageView
                android:id="@+id/seek_frag_four_image"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:src="@drawable/xin_icon"
                android:layout_marginLeft="@dimen/dp_4"
                />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_17"
        android:textColor="@color/color_3B424C"
        android:layout_marginTop="@dimen/dp_26"
        android:layout_marginLeft="@dimen/sp_15"
        android:text="猜你喜欢"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/guess_what_you_like"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_11"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        />
</LinearLayout>