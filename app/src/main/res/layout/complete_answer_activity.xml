<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_300"
            android:src="@drawable/image_background_300"
            android:scaleType="centerCrop"
            />

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_30"
            android:src="@drawable/back_white"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_30"
            />

        <TextView
            android:id="@+id/complete_answer_act_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/back"
            android:layout_marginTop="@dimen/dp_22"
            android:textSize="21sp"
            android:textColor="@color/colorWhite"
            android:text="恭喜您答完题"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/complete_answer_act_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/complete_answer_act_title"
            android:layout_marginTop="@dimen/dp_5"
            android:textSize="13sp"
            android:textColor="@color/colorWhite"
            android:text="本次答对"
            android:layout_centerHorizontal="true"
            />



        <LinearLayout
            android:id="@+id/complete_answer_act_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:layout_below="@+id/complete_answer_act_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_36"
            >

            <TextView
                android:id="@+id/complete_answer_act_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="41sp"
                android:textColor="@color/color_ffb439"
                android:text="51"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/colorWhite"
                android:text="题"
                />
        </LinearLayout>


        <TextView
            android:id="@+id/complete_answer_act_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/colorWhite"
            android:text="击败全国90%的人"
            android:layout_below="@id/complete_answer_act_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_7"
            />
    </RelativeLayout>


    <TextView
        android:id="@+id/complete_answer_act_my_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/color_3B424C"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_21"
        android:text="我的答题卡"
        />


    <TextView
        android:id="@+id/complete_answer_act_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_17"
        android:textColor="@color/color_3B424C"
        android:layout_marginTop="@dimen/dp_11"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        />


    <View
        android:layout_width="@dimen/dp_1"
        android:layout_weight="1"
        android:layout_height="@dimen/dp_0"/>


    <LinearLayout
        android:id="@+id/complete_answer_act_anew_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_80"
        android:layout_marginRight="@dimen/dp_80"
        >

        
        <ImageView
            android:id="@+id/complete_answer_act_anew_image"
            android:layout_width="25dp"
            android:layout_height="@dimen/dp_25"
            android:src="@drawable/anew"
            />


        <TextView
            android:id="@+id/complete_answer_act_anew_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/color_3B424C"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="重新答题"
            />

    </LinearLayout>

</LinearLayout>