<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!--<ImageView-->
            <!--android:id="@+id/background"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:scaleType="fitXY"-->
            <!--/>-->

        
        <RelativeLayout
            android:id="@+id/book_rack_titals"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_72"
            android:background="@color/color_323e87"
            >

            <TextView
                android:id="@+id/book_rack_frag_tital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_17"
                android:textColor="@color/colorWhite"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dp_15"
                android:text="书架"
                />
            
            <ImageView
                android:id="@+id/book_rack_frag_seek"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:src="@drawable/seek_image"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/book_rack_frag_tital"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_marginRight="@dimen/dp_15"
                />
        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/book_rack_tital"
            android:layout_below="@id/book_rack_titals"
            android:layout_marginBottom="@dimen/dp_20"
            >


            <!--<ImageView-->
                <!--android:id="@+id/book_rack_signin_image"-->
                <!--android:layout_width="@dimen/dp_20"-->
                <!--android:layout_height="@dimen/dp_20"-->
                <!--android:layout_marginLeft="@dimen/sp_17"-->
                <!--android:src="@drawable/sigin_image_second"-->
                <!--android:layout_marginTop="@dimen/dp_48"-->
                <!--/>-->
            <!--<ImageView-->
                <!--android:id="@+id/book_rack_seek_image"-->
                <!--android:layout_width="@dimen/dp_20"-->
                <!--android:layout_height="@dimen/dp_20"-->
                <!--android:layout_marginLeft="@dimen/dp_61"-->
                <!--android:src="@drawable/seek_image"-->
                <!--android:layout_alignTop="@id/book_rack_signin_image"-->
                <!--android:visibility="invisible"-->
                <!--/>-->


            <ImageView
                android:id="@+id/book_detail_image"
                android:layout_width="@dimen/dp_87"
                android:layout_height="@dimen/dp_113"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_16"
                />


            <TextView
                android:id="@+id/book_detail_tital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_19"
                android:textColor="@color/color_2B3779"
                android:text="漫步花王二姐"
                android:layout_toRightOf="@+id/book_detail_image"
                android:layout_alignTop="@+id/book_detail_image"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_16"
                />



            <LinearLayout
                android:id="@+id/continue_reading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_below="@id/book_detail_tital"
                android:layout_alignLeft="@id/book_detail_tital"
                android:layout_marginTop="@dimen/dp_11"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_11"
                    android:textColor="@color/color_662B3779"
                    android:text="继续阅读"
                    />
                <ImageView
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_10"
                    android:src="@drawable/back_f0f0f0"
                    />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_11"
                android:textColor="@color/color_662B3779"
                android:layout_below="@id/continue_reading"
                android:layout_alignLeft="@id/continue_reading"
                android:layout_marginTop="@dimen/dp_11"
                android:text="最近在读"
                />


        </RelativeLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="false"
            android:layout_below="@id/book_rack_tital"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_24"
                    android:background="@drawable/book_rack_shaped"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16"
                    android:gravity="center_vertical"
                    >

                    <ImageView
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_25"
                        android:src="@drawable/message_image"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_15"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textColor="@color/color_4A4A4A"
                        android:text="邀好友领红包"
                        />
                </LinearLayout>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/book_rack_frag_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10"
                    android:nestedScrollingEnabled="false"
                    />

            </LinearLayout>

        </ScrollView>
    </RelativeLayout>



</LinearLayout>