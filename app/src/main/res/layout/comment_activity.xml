<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_270">



        <RelativeLayout
            android:id="@+id/tital"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_70"
            android:background="@color/color_3023AE"
            >

            <ImageView
                android:id="@+id/book_detail_act_back"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_27"
                android:layout_marginLeft="@dimen/dp_15"
                android:src="@drawable/back_white"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_32"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_17"
                android:textColor="@color/colorWhite"
                android:text="书籍详情"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_15"
                />
        </RelativeLayout>




        <ImageView
            android:id="@+id/book_detail_image"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_156"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_below="@+id/tital"
            />


        <TextView
            android:id="@+id/book_detail_tital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_25"
            android:textColor="@color/color_2B3779"
            android:text="漫步花王二姐"
            android:layout_toRightOf="@+id/book_detail_image"
            android:layout_alignTop="@+id/book_detail_image"
            android:layout_marginLeft="@dimen/dp_30"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_2B3779"
            android:layout_below="@+id/book_detail_tital"
            android:layout_alignLeft="@+id/book_detail_tital"
            android:layout_marginTop="@dimen/dp_14"
            android:text="5万字"
            />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="false"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/comment_act_introduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_17"
                android:textColor="@color/color_000000"
                android:layout_marginLeft="@dimen/dp_26"
                android:layout_marginRight="@dimen/dp_26"
                android:maxLines="3"
                android:ellipsize="end"
                />
            <LinearLayout
                android:id="@+id/comment_act_catagory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_26"
                android:paddingRight="@dimen/dp_26"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_20"
                >
                
                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@drawable/catalog_image"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/color_000000"
                    android:text="目录"
                    android:layout_marginLeft="@dimen/dp_2"
                    />
                <TextView
                    android:id="@+id/comment_act_section"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/color_7D8596"
                    android:text="共30章"
                    android:layout_marginLeft="@dimen/dp_12"
                    />

                <ImageView
                    android:layout_width="@dimen/dp_8"
                    android:layout_height="@dimen/dp_15"
                    android:src="@drawable/back_f0f0f0"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_E0E0E0"
                android:layout_marginLeft="@dimen/dp_26"
                android:layout_marginRight="@dimen/dp_26"
                android:layout_marginTop="@dimen/dp_20"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_26"
                android:layout_marginRight="@dimen/dp_26"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="书友评论"
                    android:textColor="@color/color_000000"
                    />



                <View
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    />


                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/read_comment"
                    >


                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:src="@drawable/comment_image"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/color_2B3779"
                        android:text="写评论"
                        android:layout_marginLeft="@dimen/dp_4"
                        />
                </LinearLayout>

            </LinearLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/comment_act_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                />

        </LinearLayout>
    </ScrollView>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_E0E0E0"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_58"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >


        <TextView
            android:id="@+id/add_bookrack"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_40"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_32"
            android:layout_marginRight="@dimen/dp_14"
            android:text="加入书架"
            android:gravity="center"
            android:textSize="@dimen/dp_20"
            android:textColor="@color/color_2B3779"
            android:background="@drawable/comment_act_add_bookrack_shape"
            />

        <TextView
            android:id="@+id/reading_immediately"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_40"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/dp_32"
            android:text="立即阅读"
            android:gravity="center"
            android:textSize="@dimen/dp_20"
            android:textColor="@color/colorWhite"
            android:background="@drawable/comment_act_add_bookrack_shape_second"
            />
    </LinearLayout>

</LinearLayout>