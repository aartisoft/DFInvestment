<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            />

        <ImageView
            android:id="@+id/sigins_activity_back"
            android:layout_width="15dp"
            android:layout_height="@dimen/dp_22"
            android:layout_marginTop="@dimen/dp_46"
            android:layout_marginLeft="@dimen/dp_20"
            android:background="@drawable/back_18aa"
            />





        <ImageView
            android:id="@+id/signin_detail_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_269"
            android:layout_below="@id/sigins_activity_back"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            android:src="@drawable/image_firsts"
            />






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="236dp"
            android:layout_below="@id/signin_detail_image"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:background="@drawable/signins_act_shape"
            android:layout_marginTop="-30dp"
            android:paddingTop="@dimen/dp_30"
            android:paddingLeft="@dimen/dp_40"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/color_17B2AA"
                android:text="1.每日签到可领取100积分"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/color_17B2AA"
                android:text="2.积分可用于文章阅读"
                android:layout_marginTop="@dimen/dp_15"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/color_17B2AA"
                android:text="3.一篇文章10积分"
                android:layout_marginTop="@dimen/dp_15"
                />

        </LinearLayout>


        <TextView
            android:id="@+id/signin"
            android:layout_width="@dimen/dp_172"
            android:layout_height="@dimen/dp_45"
            android:layout_alignBottom="@+id/signin_detail_image"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:background="@drawable/signind_act_shape"
            android:text="每日签到即可领积分"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/colorWhite"
            />


    </RelativeLayout>
</LinearLayout>