<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorWhite"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_157"
        android:background="@drawable/tital_bar_image"
        android:paddingTop="@dimen/dp_10">




        <LinearLayout
            android:id="@+id/user_fragment_user_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_34"
            android:layout_marginRight="@dimen/dp_27"
            android:layout_marginTop="@dimen/dp_50"
            >


            <ImageView
                android:id="@+id/user_fragment_user_image"
                android:layout_width="@dimen/dp_54"
                android:layout_height="@dimen/dp_54"
                android:src="@drawable/user_images"
                />

            <TextView
                android:id="@+id/user_fragment_user_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="请登录"
                android:textColor="@color/colorWhite"
                android:textSize="23sp"
                android:layout_marginLeft="@dimen/dp_15"
                />

            <ImageView
                android:id="@+id/user_fragment_user_more"
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/sp_23"
                android:src="@drawable/more_image"
                />

        </LinearLayout>




    </RelativeLayout>





    <LinearLayout
        android:id="@+id/user_frag_books_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_19"
        android:layout_marginRight="@dimen/dp_19"
        android:layout_marginTop="@dimen/dp_37"
        >

        
        <ImageView
            android:id="@+id/user_frag_books_image"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:src="@drawable/my_books"
            />

        <TextView
            android:id="@+id/user_frag_books_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/color_3B424C"
            android:layout_marginLeft="@dimen/dp_6"
            android:text="我的课程"
            />

        <ImageView
            android:id="@+id/user_frag_books_more"
            android:layout_width="7dp"
            android:layout_height="@dimen/dp_15"
            android:src="@drawable/back_f0f0f0"
            />

    </LinearLayout>

    <LinearLayout
