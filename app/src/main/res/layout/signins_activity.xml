<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    >



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/signins_act_tital"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_70"
            android:background="@color/color_323e87"
            >

            <ImageView
                android:id="@+id/sigins_activity_back"
                android:layout_width="15dp"
                android:layout_height="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@drawable/back_white"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_15"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_17"
                android:text="签到领积分"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorWhite"
                />

            <TextView
                android:id="@+id/sigins_activity_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/colorWhite"
                android:text="积分规则"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_15"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/signins_act"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_35"
            android:layout_below="@id/signins_act_tital"
            >

            
            <ImageView
                android:layout_width="@dimen/dp_91"
                android:layout_height="@dimen/dp_91"
                android:src="@drawable/signin_background"
                android:layout_centerHorizontal="true"
                />
            
            <TextView
                android:id="@+id/signins_act_code_tital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/colorWhite"
                android:text="可用积分"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_23"
                />

            <TextView
                android:id="@+id/signins_act_integral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_21"
                android:textColor="@color/colorWhite"
                android:text="0"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/signins_act_code_tital"
                />
        </RelativeLayout>
        
        
        <LinearLayout
            android:id="@+id/signins_act_second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/signins_act_shape"
            android:layout_below="@id/signins_act"
            android:layout_marginTop="@dimen/dp_25"

            >




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_11"
                    android:textColor="@color/color_3B424C"
                    android:text="已连续签到"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="bottom"
                    >

                    <TextView
                        android:id="@+id/signins_act_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/dp_31"
                        android:text="1"
                        android:textColor="@color/color_3B424C"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_11"
                        android:textColor="@color/color_3B424C"
                        android:text="天"
                        />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/signin"
                android:layout_width="@dimen/dp_166"
                android:layout_height="@dimen/dp_45"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:background="@drawable/signind_act_shape"
                android:text="签到"
                android:textSize="@dimen/sp_21"
                android:textColor="@color/colorWhite"
                android:layout_below="@id/signins_act_second"
                android:layout_marginLeft="@dimen/dp_50"
                />


        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_6"
        android:background="@color/color_F5F5F5"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/color_3B424C"
        android:paddingLeft="@dimen/dp_15"
        android:gravity="center_vertical"
        android:text="做任务赚积分"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_15"
        android:gravity="center_vertical"
        >
        
        <ImageView
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:src="@drawable/fatie"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/color_090909"
            android:layout_marginLeft="@dimen/sp_12"
            android:text="发帖"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_15"
        android:gravity="center_vertical"
        >

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/collect_image"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/color_090909"
            android:layout_marginLeft="@dimen/sp_12"
            android:text="圈子关注"
            />
    </LinearLayout>
</LinearLayout>